# Configuration for the Music Server
# Edit these values according to your preferences

# ===========================================
# YouTube Download Settings
# ===========================================

# Audio quality (best, worst, or specific format like 'mp3/192')
AUDIO_QUALITY=best

# Audio format preference
AUDIO_FORMAT=mp3

# Download path
MUSIC_PATH=/home/pi/music

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=2

# ===========================================
# Music Organization Settings
# ===========================================

# Folder structure: artist/album or artist or flat
FOLDER_STRUCTURE=artist/album

# Whether to embed metadata
EMBED_METADATA=true

# Whether to download thumbnails as album art
DOWNLOAD_THUMBNAILS=true

# ===========================================
# Navidrome Settings
# ===========================================

# Admin user credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_123

# Server name
SERVER_NAME=Pi Music Server

# Enable user registration
ENABLE_USER_REGISTRATION=false

# ===========================================
# Automation Settings
# ===========================================

# How often to check for new playlists (in minutes)
PLAYLIST_CHECK_INTERVAL=60

# Playlists to monitor (comma-separated YouTube playlist URLs)
MONITOR_PLAYLISTS=""

# ===========================================
# System Settings
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Timezone
TIMEZONE=America/New_York

# ===========================================
# Web Interface Settings
# ===========================================

# Enable web download interface
ENABLE_WEB_INTERFACE=true

# Web interface port
WEB_PORT=8080

# Maximum file size for manual downloads (in MB)
MAX_DOWNLOAD_SIZE=100
